<div class="w-100 mb-3">
    <div class="d-flex justify-content-start">
        <h2 class="text-secondary mb-4 digitalta-title">{{#str}} concept:resources, local_digitalta {{/str}}</h2>
    </div>
    <div class="resources-list row p-0 mx-0">
        {{#resources.data}}
            {{> local_digitalta/_common/resource-list-item}}
        {{/resources.data}}
        {{^resources.data}}
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    {{#str}} general:no_elements, local_digitalta {{/str}}
                </div>
            </div>
        {{/resources.data}}
    </div>
    {{#resources.data.0}}
        <div class="d-flex justify-content-end mt-3">
            <a href="{{resources.allurl}}" class="btn btn-primary">{{#str}} general:see_more, local_digitalta {{/str}}</a>
        </div>
    {{/resources.data.0}}
</div>