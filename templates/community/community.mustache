{{!
    @template course_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
  {
  "experiences": {
    "data": [
      {
        "id": "3",
        "user": "2",
        "title": "aaa",
        "description": "aaaa",
        "date": "2024-03-05 10:49:08",
        "lang": "es",
        "visible": "1"
      }
    ],
    "show_image_profile": true
  }
}
}}
{{> local_dta/styles }}
<div class="container">
  <div class="wrapper">
    <svg>
      <text dx="2.75em" dy="1em" text-anchor="middle">
        Community
      </text>
    </svg>
  </div>
  <div class="post-container">
    {{#experiences.show_image_profile}}
    <!-- avatar -->
    <div class="avatar avatar-xl mt-n7 ms-4">
      <img
        src="{{user.image}}"
        alt="Image"
        class="rounded-circle border-4 border-white-color-40"
      />
    </div>
    {{/experiences.show_image_profile}}
    <!-- input -->
    <form action="{{add_experience_url}}" method="POST" class="d-flex flex-row w-100">
    <div class="custom-input pr-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="svg-icon bi-vector-pen" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M10.646.646a.5.5 0 0 1 .708 0l4 4a.5.5 0 0 1 0 .708l-1.902 1.902-.829 3.313a1.5 1.5 0 0 1-1.024 1.073L1.254 14.746 4.358 4.4A1.5 1.5 0 0 1 5.43 3.377l3.313-.828L10.646.646zm-1.8 2.908-3.173.793a.5.5 0 0 0-.358.342l-2.57 8.565 8.567-2.57a.5.5 0 0 0 .34-.357l.794-3.174-3.6-3.6z"></path>
        <path fill-rule="evenodd" d="M2.832 13.228 8 9a1 1 0 1 0-1-1l-4.228 5.168-.026.086.086-.026z"></path>
      </svg>
      <input class="input" type="text" name="experience_title" placeholder="Tell us your experience">
    </div>
    <!-- post button -->
      <button class="post-button">
        Share
      </button>
    </form>
    
  </div>
  <!-- cards -->
  <div class="py-6">
    <div class="row">
      {{#experiences.data}}
        <div class="col-lg-4 col-4">{{> local_dta/card }}</div>
      {{/experiences.data}}
    </div>
  </div>
</div>