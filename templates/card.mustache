{{!
    @template course_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "experiences.data": [
            {
                "id": "3",
                "user": "2",
                "title": "aaa",
                "description": "aaaa",
                "date": "2024-03-05 10:49:08",
                "lang": "es",
                "visible": "1"
            }
        ]
    }
}}
<div class="card mb-5 rounded-3">
  <div class="experience-card-img-container">
    <img
      src="https://bootdey.com/image/480x180/191970/ffffff"
      alt="Image"
      class="img-fluid rounded-top experience-card-img"
    />
  </div>
  {{#experiences.show_image_profile}}
  <!-- avatar -->
  <div class="avatar avatar-xl mt-n7 ms-4">
    <img
      src="{{image}}"
      alt="Image"
      class="rounded-circle border-4 border-white-color-40"
    />
  </div>
  {{/experiences.show_image_profile}}
  <!-- card body -->
  <div class="card-body">
    <!-- Title -->
    <h4 class="mb-1">{{title}}</h4>
    <p>{{description}}</p>
  </div>
</div>