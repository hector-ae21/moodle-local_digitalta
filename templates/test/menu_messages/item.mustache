<div class="list-tutoring-group-item d-flex justify-content-between align-items-center mb-2">
  <div class="d-flex align-items-center">
    <img src="{{profile_img}}" class="tutoring_profile_image rounded-circle mr-3" />
    <div>
      <h6 class="mb-0">{{name}}</h6>
      <small>{{#str}}tutoring_at_university, local_dta{{/str}} {{university}}</small>
    </div>
  </div>
  <div class="tutoring-action-button">
    <button class="btn btn-accept btn-sm mr-1">
      <i class="fa fa-check"></i>
    </button>
    <button class="btn btn-reject btn-sm">
      <i class="fa fa-times"></i>
    </button>
  </div>
</div>



