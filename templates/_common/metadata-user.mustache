<div class="d-flex flex-column mb-1">
    <span class="text-muted me-2 d-flex align-items-start flex-column">
        {{#user}}
        <div class="d-flex align-items-start">
            <a href="{{profileurl}}">
                <img src="{{imageurl}}" alt="User Image" class="rounded border-4 border-white me-2"
                    style="width: 50px; height: 50px;">
            </a>
            <div class="d-flex flex-column">
                <a href="{{profileurl}}" class="bold text-dark">
                    {{name}}
                </a>
                <span class="text-muted font-weight-normal">
                    {{#timecreated_string}}
                    <i class="fa fa-calendar me-1"></i>
                    {{timecreated_string}}
                    {{/timecreated_string}}
                    {{#position}}
                    {{position}}
                    {{/position}}
                </span>
            </div>
            {{#modschedulerurl}}
            <div>
                <a class="btn btn-tutoring-tutor-calendar position-absolute" href="{{modschedulerurl}}&tutorid={{id}}">
                    <i class="fa fa-calendar"></i>
                </a>
            </div>
            {{/modschedulerurl}}
        </div>

        {{/user}}
    </span>
</div>