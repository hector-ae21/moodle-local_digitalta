<div class="container-fluid col-12 col-sm-10 digitalta-case">
    <input type="hidden" id="case-id" value="{{case.data.id}}">
    <!--Section: Title-->
    <section data-section-name="digitalta-case-title" class="mb-5">
        <div class="container-fluid d-flex">
            <div class="row align-items-justify">
                <div class="col-12">
                    <div class="digitalta-subtitle">OurCases</div>
                    <h1 class="digitalta-title h1">
                        <span class="translatable-content">{{case.data.title}}</span>
                    </h1>
                    {{#needstranslation}}
                        {{> local_digitalta/_common/translate-button}}
                    {{/needstranslation}}
                </div>
            </div>
        </div>
    </section>
    <!--Section: Metadata-->
    <section data-section-name="digitalta-case-metadata" class="mb-5">
        <div class="container-fluid d-flex">
            <div class="row w-100">
                <div class="col-12">
                    {{> local_digitalta/cases/view/view-metadata}}
                </div>
            </div>
        </div>
    </section>
    <!--Section: Content-->
    <section data-section-name="digitalta-case-content">
        <div class="container-fluid d-flex">
            <div class="row w-100">
                <!--Summary-->
                {{#case.data.description}}
                <div class="translatable-content">
                    <div class="col-12" id="case-description">
                        <div class="mb-3">
                            <div class="mb-4">
                                <h2 class="text-secondary my-0 digitalta-title">{{#str}}concept:summary, local_digitalta{{/str}}</h2>
                            </div>
                            <div class="font-italic text-justify">
                                {{{case.data.description}}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/case.data.description}}
                <!--Sections-->
                <div class="translatable-content">
                    <div class="col-12" id="case-sections">
                        {{#case.data.sections}}
                            {{> local_digitalta/cases/view/view-section-text}}
                        {{/case.data.sections}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>