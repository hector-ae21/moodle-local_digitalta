<div class="w-100 mb-3">
    <div class="d-flex justify-content-start">
        <h2 class="text-secondary mb-4 digitalta-title">{{#str}} concept:experiences, local_digitalta {{/str}}</h2>
    </div>
    <div class="experiences row p-0 mx-0 justify-content-start">
        {{#experiences.data}}
            {{> local_digitalta/_common/experience-list-item-themetags}}
        {{/experiences.data}}
        {{^experiences.data}}
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    {{#str}} general:no_elements, local_digitalta {{/str}}
                </div>
            </div>
        {{/experiences.data}}
    </div>
    {{#experiences.data.0}}
        <div class="d-flex justify-content-end mt-3">
            <a href="{{experiences.allurl}}" class="btn btn-primary">{{#str}} general:see_more, local_digitalta {{/str}}</a>
        </div>
    {{/experiences.data.0}}
</div>