<div class="container-fluid col-12 col-sm-10 digitalta-cases">
    <!--Section: Title-->
    <section data-section-name="digitalta-cases-title" class="mb-4">
        <div class="container-fluid d-flex">
            <div class="row align-items-justify w-100">
                <div class="col-12">
                    <div class="digitalta-subtitle">DigitalTA</div>
                    <h1 class="digitalta-title display-3">{{{title}}}</h1>
                </div>
            </div>
        </div>
    </section>
    <!--Section: Introduction-->
    <section data-section-name="digitalta-cases-introduction" class="mb-4">
        <div class="container-fluid d-flex text-center">
            <div class="row align-items-center w-100">
                <div class="col-12 text-justify" style="line-height: 2em;">
                    {{#str}} cases:description, local_digitalta {{/str}}
                </div>
            </div>
        </div>
    </section>
    <!--Section: Add Case-->
    {{#istutor}}
    <section data-section-name="digitalta-cases-add" class="mb-4">
        <div class="container-fluid d-flex">
            <div class="row align-items-justify w-100">
                <div class="col-12">
                    {{> local_digitalta/cases/dashboard/post-input}}
                </div>
            </div>
        </div>
    </section>
    {{/istutor}}
    <!--Section: Cases-->
    <section data-section-name="digitalta-cases-list" class="mb-4">
        <div class="container-fluid d-flex my-2">
            <!--Filter chips-->
            <div class="btn-group">
                <button type="button" class="btn btn-secondary dropdown-toggle custom-dropdown-toggle" style="height: fit-content" data-toggle="dropdown" data-display="static" aria-expanded="false">
                    <span>{{#str}} filters:title, local_digitalta {{/str}}</span>
                    <i class="fa fa-filter"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-left dropdown-menu-lg-right px-2" id="filters-menu">
                    <div class="input-group mb-3 filterTheme" style="width: 300px" id="filterThemeSelect"></div>

                    {{> local_digitalta/_common/filterTag }}

                    {{> local_digitalta/_common/filterAuthors }}

                    <div class="input-group mb-3" style="width: 300px" id="filterLanguageSelect"></div>
                </div>
            </div>

            <div id="filtersList">
                {{> local_digitalta/_common/filterList }}
            </div>
            <!--Filter chips-->
        </div>
        <div class="container-fluid d-flex my-2" id="list-cases-body"></div>
        <div class="d-flex justify-content-center" id="digital-pagination">
            {{> local_digitalta/_common/pagination }}
        </div>
    </section>
</div>

{{#js}}
    require(['local_digitalta/cases/provider'],function(Provider){
    Provider.init()
    })
{{/js}}

