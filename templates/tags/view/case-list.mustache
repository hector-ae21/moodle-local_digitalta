<div class="w-100 mb-3">
    <div class="d-flex justify-content-start">
        <h2 class="text-secondary mb-4 digitalta-title">{{#str}} concept:cases, local_digitalta {{/str}}</h2>
    </div>
    <div class="cases row p-0 mx-0">
        {{#cases.data}}
            {{> local_digitalta/_common/case-list-item-themetags}}
        {{/cases.data}}
        {{^cases.data}}
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    {{#str}} general:no_elements, local_digitalta {{/str}}
                </div>
            </div>
        {{/cases.data}}
    </div>
    {{#cases.data.0}}
        <div class="d-flex justify-content-end mt-3">
            <a href="{{cases.allurl}}" class="btn btn-primary">{{#str}} general:see_more, local_digitalta {{/str}}</a>
        </div>
    {{/cases.data.0}}
</div>